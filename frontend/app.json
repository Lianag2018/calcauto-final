{
  "expo": {
    "name": "CalcAuto AiPro",
    "slug": "calcauto-aipro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "calcauto-aipro",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.calcauto.aipro",
      "infoPlist": {
        "NSCameraUsageDescription": "Scanner les documents PDF",
        "NSPhotoLibraryUsageDescription": "Importer des fichiers PDF",
        "NSContactsUsageDescription": "Acc√©der aux contacts pour envoyer des soumissions"
      }
    },
    "android": {
      "package": "com.calcauto.aipro",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "READ_CONTACTS", "WRITE_CONTACTS"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "CalcAuto AiPro",
      "shortName": "CalcAuto",
      "description": "Calculateur de financement automobile avec CRM",
      "backgroundColor": "#1a1a2e",
      "themeColor": "#4ECDC4",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "scope": "/"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a2e"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
